<%- include("../layouts/start", {title: title}) %>
<%- include("../layouts/menu", {title: title, noBtn: false}) %>

<div class="row justify-content-center mt-4">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">
                <div style="height: 500px" class="d-flex justify-content-center align-items-center <% if (!book.cover) { %> border <% } %>">
                    <% if (book.cover) { %><img class="card-img-top" src="<%= book.cover %>" alt="Book cover" height="498"> <% } else { %> <p class="text-muted">Загрузите обложку книги</p> <% } %>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <h5 class="card-title m-0"><%= book.title %></h5>
                    <form action="/favorite/<%= book.id %>/view" method="POST">
                        <button style="padding: 0; border: none; background: none; outline: none;">
                            <svg style="cursor: pointer" xmlns="http://www.w3.org/2000/svg" width="16" height="16" stroke="currentColor" fill=<%= book.favorite ? "currentColor" : "white" %> class="bi bi-star-fill" viewBox="0 0 16 16">
                                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                            </svg>
                        </button>
                    </form>
                </div>
                <p class="card-text"><span class="card-subtitle mb-2 text-muted">Автор: </span><%= book.authors %></p>
                <p class="card-text"><%= book.description %>.</p>
                <% if(book.book) { %>
                    <a target="_blank" rel="noopener noreferrer" href="<%= book.book %>" class="card-link">Открыть .pdf файл книги</a>
                <% } %>

                <div class="text-right">
                    <a class="btn btn-sm btn-primary ml-3" href="/update/<%= book.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/delete/<%= book.id %>" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger ml-3">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<%- include("../layouts/end") %>